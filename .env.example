# VTU API Configuration
NEXT_PUBLIC_VTU_API_URL=http://localhost:3000/api/vtu
NEXT_PUBLIC_MOCK_API=false

# VTPass Credentials (Get from https://vtpass.com)
# Sandbox: https://sandbox.vtpass.com
# Production: https://vtpass.com
VTPASS_API_KEY=your_vtpass_api_key_here
VTPASS_PUBLIC_KEY=your_vtpass_public_key_here
VTPASS_SECRET_KEY=your_vtpass_secret_key_here
VTPASS_BASE_URL=https://sandbox.vtpass.com

# Paystack Credentials (Get from https://dashboard.paystack.com)
# Test keys for development, Live keys for production
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxx

# Supabase (Get from https://supabase.com)
# Create a new project and copy the credentials
# Note: We use anon key only. RLS is disabled on transactions table for API route access
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Service (Optional - for transaction receipts)
# Get from https://resend.com
# RESEND_API_KEY=re_xxxxx
